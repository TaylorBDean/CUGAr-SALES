{
  "appId": "com.cugarsales.app",
  "productName": "CUGAr Sales Assistant",
  "copyright": "Copyright Â© 2026",
  "directories": {
    "buildResources": "build",
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "electron.js",
    "preload.js",
    "public/icon.png",
    "public/tray-icon.png",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "../../../",
      "to": "backend",
      "filter": [
        "src/cuga/**/*",
        "pyproject.toml",
        "requirements.txt",
        ".env.example"
      ]
    }
  ],
  "mac": {
    "category": "public.app-category.business",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "build/icon.icns"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.ico"
  },
  "linux": {
    "category": "Office",
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.png"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}
